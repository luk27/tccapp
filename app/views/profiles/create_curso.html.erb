<h1>Adicionar Curso</h1>
<% if signed_in? %>
<%= form_for(@curso) do |f| %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :universidade %><br />
    <%= f.text_field :universidade %>
  </div>
  <div class="field">
    <%= f.label :ano_ingresso %><br />
    <%= f.text_field :ano_ingresso %>
  </div>
  <div class="field">
    <%= f.label :ano_termino %><br />
    <%= f.text_field :ano_termino %>
  </div>



  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
  <% else %>
  <h1>Sample App</h1>
  
<% end %>
