<h1>Cadastrar</h1>

<%= form_for(@profile) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :sobrenome %><br />
    <%= f.text_field :sobrenome %>
  </div>

  <div class="field">
    <%= f.label :data_nascimento %><br />
    <%= f.text_field :data_nascimento %>
  </div>

  <div class="field">
    <%= f.label :sexo %><br />
    <%= select( "profile", "sexo", { "Masculino" => "masculino", "Feminino" => "feminino"}) %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o da Senha" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>
